@model MedServices.Models.ClassDomain.AdminCount
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Hospital Sidebar</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- NAVIGATION BAR CSS FILES -->
    <link href="~/css/NavigationBar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!--Font awesome css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <!--JS AJAX file-->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!--BAR GRAPH FILE-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <!--PIE CHART FILE-->
    <link rel="stylesheet" href="~/css/Report.css" />

</head>
<body id="body-pd">
   
    <!-- Print Report Button -->
    <div class="row mt-4">
        <div class="col text-center">
            <button id="printButton" class="btn btn-primary print-btn">Print Report</button>
        </div>
    </div>
    <section id="dashboard" class="hero section light-background">
        <h3 class="text-center">Dashboard</h3>
        <div class="container position-relative">
            <div class="row mt-5">
                <div class="col-md-4">
                    <div class="info-box bg-light shadow rounded p-3">
                        <h5 class="text-muted">Patients Admitted</h5>
                        <p class="display-4 font-weight-bold" id="openPatients">@Model.TotalPatients</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box bg-light shadow rounded p-3">
                        <h5 class="text-muted">Available Beds</h5>
                        <p class="display-4 font-weight-bold" id="availableBeds">@Model.TotalUsers</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box bg-light shadow rounded p-3">
                        <h5 class="text-muted">Total Staff</h5>
                        <p class="display-4 font-weight-bold" id="totalStaff">@Model.TotalMedication</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <!-- Charts Section -->
        <div id="weeklyAdmissionsData" class="row mt-4">
            <!-- Bar Chart for Admissions -->
            <div class="col-md-6">
                <div>
                    <h4>Admission to Hospital</h4>
                    <canvas id="barChart_div" width="200" height="200"></canvas>
                </div>
            </div>
        </div>
        

    </section>





    <script src="~/js/NavigationBar.js"></script>
    
    
    <script>
        

        // Update date and time every second
        setInterval(updateDateTime, 1000);

        // Initial call to display immediately
        updateDateTime();
    </script>
    @section Scripts {
        <script id="weeklyAdmissionsData" type="application/json">
            @Html.Raw(Json.Serialize(Model.Chart))
        </script>

        <script src="~/js/AdminChart.js"></script>
      
    }
    <script>
        document.getElementById("printButton").addEventListener("click", function () {
            window.location.href = '/Administrator/GenerateStockPdf';
        });
    </script>





</body>
</html>

